<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="style_home_image">
        <item name="android:layout_width">@dimen/x_y_home_image</item>
        <item name="android:layout_height">@dimen/x_y_home_image</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:background">@drawable/img_zy_loading</item>
    </style>

    <style name="style_home_date_name">
        <item name="android:layout_width">@dimen/x_y_home_image</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="style_home_date_age">
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_container">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="style_title_button_openmenu">
        <item name="android:layout_width">@dimen/height_title</item>
        <item name="android:layout_height">@dimen/height_title</item>
        <item name="android:paddingLeft">@dimen/title_button_padding_left</item>
        <item name="android:paddingRight">@dimen/title_button_padding_right</item>
        <item name="android:background">@drawable/button_title_left</item>
    </style>

    <style name="style_sliding_main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_sliding_menu_bg</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableRight">@drawable/img_sliding_button_right</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingTop">20dip</item>
        <item name="android:paddingBottom">20dip</item>
    </style>

    <style name="style_zhangyou_tab" parent="base_radiobutton">
        <item name="android:background">@drawable/radio_zhangyou_tab</item>
    </style>

    <style name="style_button_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
    </style>

    <style name="base_lab_textview">
        <item name="android:textColor">#3e3e3e</item>
    </style>

    <style name="base_edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_default</item>
        <item name="android:textColor">#497dc1</item>
        <item name="android:textColorHint">#979797</item>
    </style>

    <style name="style_bg">
        <item name="android:background">@drawable/img_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_edittext_default" parent="base_edittext">
        <item name="android:paddingTop">13dip</item>
        <item name="android:paddingBottom">13dip</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_edittext_login" parent="base_edittext">
        <item name="android:paddingTop">13dip</item>
        <item name="android:paddingBottom">13dip</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_text_lab_default" parent="base_lab_textview"></style>

</resources>