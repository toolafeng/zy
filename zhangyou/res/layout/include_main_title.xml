<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layout_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_title_back"
            style="@style/style_title_button_openmenu"
            android:gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_title_left"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_title_center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dip"
            android:layout_toLeftOf="@+id/layout_title_right"
            android:orientation="vertical"
            android:padding="0dip" >

            <RelativeLayout
                android:id="@+id/layout_home_title"
                style="@style/style_title"
                android:background="@drawable/img_title"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/style_title_text"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="首页"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/size_title" />

                <RelativeLayout
                    android:id="@+id/layout_title_type_01"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/tv_title" >

                    <TextView
                        android:id="@+id/tv_title_01"
                        style="@style/style_title_text"
                        android:layout_width="fill_parent"
                        android:layout_marginRight="10dip"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="玩游戏赢大奖,玩游戏赢大奖,玩游戏赢大奖,玩游戏赢大奖,玩游戏赢大奖"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/size_subtitle"
                        android:width="@dimen/title_marquee_width" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_taojing_title"
                style="@style/style_title"
                android:background="@drawable/img_title"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_taojing_title"
                    style="@style/style_title_text"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="掌上ATM"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/size_title" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/tv_taojing_title" >

                    <TextView
                        style="@style/style_title_text"
                        android:layout_width="fill_parent"
                        android:layout_marginRight="10dip"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="玩游戏赢大奖,玩游戏赢大奖,玩游戏赢大奖,玩游戏赢大奖,玩游戏赢大奖"
                        android:textColor="@color/color_title"
                        android:textSize="@dimen/size_subtitle"
                        android:width="@dimen/title_marquee_width" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_zhangyou_title"
                style="@style/style_title"
                android:background="@drawable/img_title"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" >

                    <TextView
                        style="@style/style_title_text"
                        android:text="掌游"
                        android:textColor="@color/color_title" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_zhangxiao_title"
                style="@style/style_title"
                android:background="@drawable/img_title"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" >

                    <TextView
                        style="@style/style_title_text"
                        android:text="掌校"
                        android:textColor="@color/color_title" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_zhangyue_title"
                style="@style/style_title"
                android:background="@drawable/img_title"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/layout_title_type_02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="visible" >

                    <RadioGroup
                        android:id="@+id/rg_data_type"
                        android:layout_width="wrap_content"
                        android:layout_height="36dip"
                        android:layout_gravity="center_vertical"
                        android:background="@color/blue"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rb_student"
                            android:layout_width="120dip"
                            android:layout_height="match_parent"
                            android:background="@drawable/radio_zhangyue_xiaonei"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="趣味校内"
                            android:textColor="@color/zhangyue_radio_text_color"
                            android:textSize="@dimen/size_subtitle" />

                        <RadioButton
                            android:id="@+id/rb_worker"
                            android:layout_width="120dip"
                            android:layout_height="match_parent"
                            android:background="@drawable/radio_zhangyue_xiaowai"
                            android:button="@null"
                            android:gravity="center"
                            android:text="精彩校外"
                            android:textColor="@color/zhangyue_radio_text_color"
                            android:textSize="@dimen/size_subtitle" />
                    </RadioGroup>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:visibility="visible" >

            <Button
                android:id="@+id/btn_title_refresh"
                style="@style/style_title_button"
                android:background="@drawable/button_title_refresh"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_title_more"
                style="@style/style_title_button"
                android:background="@drawable/button_title_right"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>